   "" \
   "--disable-tiff" \
   "for multipage tiff support"
   
optional_depends djvulibre \
   "" \
   "--disable-djvu" \
   "for djvu document support"
   
optional_depends texlive \
   "" \
   "--disable-dvi" \
   "for dvi support"

optional_depends gdk-pixbuf \
   "--enable-pixbuf" \
   "" \
   "for pixbuf support"

